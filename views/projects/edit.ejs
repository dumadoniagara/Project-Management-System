<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project</title>
    <% include ../partials/css-bootstrap %>
    <style>
        .container {
            margin-top: 5%;
        }
    </style>
</head>

<body>

    <header>
        <%- include ../partials/navbar %>
    </header>

    <div class="container">
        <h1>Edit Project</h1>
        <hr>
        <form action="/projects/edit" method="post">
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Project Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="projectName" name="projectName" value="<%= project.name %>">
                    <input type="hidden" class="form-control" id="projectName" name="projectId" value="<%= project.projectid %>"
                        placeholder="Project Name">
                </div>
            </div>

            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label">Members</label>
                <div class="col-sm-10">
                    <% memberList.forEach(item => { %>
                    <div class="form-check">
                        <input class="form-check-input" name="members" type="checkbox" id="" value="<%= item.userid%>" <%= membersId.includes(item.userid) ? 'checked' : '' %> >
                        <label class="form-check-label" for="check-id"><%= item.fullname %></label>
                    </div>
                    <% }); %>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary"> Save </button>
                </div>
            </div>

        </form>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <% include ../partials/footer %>
</body>

</html>